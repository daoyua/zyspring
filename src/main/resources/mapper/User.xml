<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="test">


<select id="selectUser" resultType="com.springtest.zy.spring.jdbc.User">
    select * from account where id =#{v}
</select>
    <select id="selectUserName" resultType="com.springtest.zy.spring.jdbc.User">
--     select * from account where name like '%${v}%'
    select * from account where name like "%"#{v}"%"
</select>

    <insert id="addUser" parameterType="com.springtest.zy.spring.jdbc.User">
<selectKey keyProperty="id" resultType="Integer" order="AFTER">
    select Last_insert_id()
</selectKey>
insert into account (name, money) values (#{name},#{money})
</insert>
    <update id="updateUser" parameterType="com.springtest.zy.spring.jdbc.User">
update account set name=#{name},money=#{money} where id =#{id}
    </update>

    <delete id="deleteUser" parameterType="Integer">
        delete from account where id =#{v}
    </delete>
</mapper>